{
  "name": "codegraph-mcp",
  "version": "1.0.0",
  "description": "Universal Codebase Intelligence for Claude Code - MCP Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "npm rebuild tree-sitter-javascript tree-sitter-typescript tree-sitter-python tree-sitter-go tree-sitter-rust tree-sitter-java"
  },
  "keywords": [
    "mcp",
    "claude",
    "code",
    "analysis",
    "ast",
    "graph",
    "semantic-search"
  ],
  "author": "Claude CodeGraph Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.10.1",
    "better-sqlite3": "^9.2.2",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "neo4j-driver": "^5.14.0",
    "p-queue": "^8.0.1",
    "simple-git": "^3.20.0",
    "tree-sitter": "^0.20.6",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-rust": "^0.20.4",
    "tree-sitter-typescript": "^0.20.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^10.4.5",
    "babel-plugin-istanbul": {
      "test-exclude": {
        "glob": "^10.4.5"
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
